<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/playerOne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player One"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="25dp"

        />

    <TextView
        android:id="@+id/playerTwo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Player Two"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"/>
    <TextView
        android:id="@+id/playerOneScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerOne"
        android:layout_marginLeft="80dp"/>

    <TextView
        android:id="@+id/playerTwoScore"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playerTwo"
        android:layout_marginRight="80dp"/>

    <Button
        android:id="@+id/btn0"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/yellow"
        android:text=""
        android:textColor="@color/black"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="@id/playerOne"
        app:layout_constraintTop_toBottomOf="@+id/playerOneScore" />

    <Button
        android:id="@+id/btn1"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginLeft="8dp"
        android:backgroundTint="@color/yellow"
        android:text=""
        android:textColor="@color/black"
        android:textSize="80sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/btn0"
        app:layout_constraintTop_toTopOf="@+id/btn0" />

    <Button
        android:id="@+id/btn2"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="80sp"
        android:textStyle="bold"
        android:text=""
        android:layout_marginLeft="8dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/btn1"
        app:layout_constraintTop_toTopOf="@+id/btn1"/>

    <Button
        android:id="@+id/btn3"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="80sp"
        android:textStyle="bold"
        android:text=""
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/btn0"
        app:layout_constraintTop_toBottomOf="@+id/btn0"/>

    <Button
        android:id="@+id/btn4"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="80sp"
        android:textStyle="bold"
        android:text=""
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toRightOf="@+id/btn3"
        app:layout_constraintTop_toTopOf="@+id/btn3"/>

    <Button
        android:id="@+id/btn5"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="80sp"
        android:textStyle="bold"
        android:text=""
        android:backgroundTint="@color/yellow"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/btn4"
        app:layout_constraintTop_toTopOf="@+id/btn4"/>

    <Button
        android:layout_marginRight="4dp"
        android:id="@+id/btn6"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="80sp"
        android:textStyle="bold"
        android:text=""
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        app:layout_constraintLeft_toLeftOf="@+id/btn3"
        app:layout_constraintTop_toBottomOf="@+id/btn3"/>

    <Button
        android:layout_marginRight="4dp"
        android:id="@+id/btn7"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="80sp"
        android:textStyle="bold"
        android:text=""
        android:layout_marginLeft="8dp"
        android:backgroundTint="@color/yellow"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/btn6"
        app:layout_constraintTop_toTopOf="@+id/btn6"/>

    <Button
        android:id="@+id/btn8"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:textSize="80sp"
        android:textStyle="bold"
        android:text=""
        android:backgroundTint="@color/yellow"
        android:layout_marginLeft="8dp"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@+id/btn7"
        app:layout_constraintTop_toTopOf="@+id/btn7"/>

    <View
        android:layout_width="340sp"
        android:layout_height="315sp"
        android:layout_marginLeft="4dp"
        android:layout_marginTop="88dp"
        android:background="@color/bar"
        app:layout_constraintLeft_toLeftOf="@id/btn0"
        app:layout_constraintTop_toBottomOf="@id/playerOne" />

    <Button
        android:id="@+id/Reset"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="40dp"
        android:padding="10dp"
        android:text="Reset"
        android:textSize="20dp"
        app:backgroundTint="#000000"
        app:layout_constraintStart_toStartOf="@+id/btn6"
        app:layout_constraintTop_toBottomOf="@id/btn7" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="125dp"
        android:fontFamily="@font/bungee_shade"
        android:gravity="center_horizontal"
        android:text="Tic Tac Toe"
        android:textAlignment="center"
        android:textSize="45sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.487" />
</androidx.constraintlayout.widget.ConstraintLayout>